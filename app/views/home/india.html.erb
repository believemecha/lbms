<div class="container mx-auto px-2">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex justify-center">
            <%= image_tag('poster.jpeg', class: 'w-full md:max-w-md', alt: 'Call Analysis Image') %>
        </div>
        <div class="flex flex-col justify-center">
            <div class="text-center mt-5">
                <h1 class="text-3xl md:text-4xl font-bold">Welcome to Communication Growth</h1>
                <p class="mt-2 text-gray-700">Revolutionize your call analysis with our powerful tools.</p>
                <a href="users/sign_in" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 inline-block">Login</a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-xl font-bold">Duration of Calls Over Time</h5>
                <%= line_chart @call_data, xtitle: "Time", ytitle: "Duration (seconds)" %>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-xl font-bold">Distribution of Auto-Replies</h5>
                <%= pie_chart @auto_reply_data %>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-xl font-bold">Top Performers of the week</h5>
                <%= column_chart @top_performers_data, xtitle: "Performers", ytitle: "Call Counts" %>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 mt-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-xl font-bold">Distribution of Leads by Source</h5>
                <%= pie_chart @lead_sources_data %>
            </div>
        </div>
    </div>
</div>
