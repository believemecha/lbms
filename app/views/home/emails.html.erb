<!DOCTYPE html>
<html>
<head>
  <title>Inbound Emails</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <h1>Inbound Emails</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <% if @inbound_emails.first %>
            <% @inbound_emails.first.meta.keys.each do |key| %>
              <th><%= key.humanize %></th>
            <% end %>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @inbound_emails.each do |email| %>
          <tr>
            <td><%= email.id %></td>
            <% email.meta.each do |key, value| %>
              <td><%= value.to_s.html_safe %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="pagination">
      <%= paginate @inbound_emails %>
    </div>
  </div>
</body>
</html>
