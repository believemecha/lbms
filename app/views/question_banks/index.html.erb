
<body>
  <div>
      <%= render 'students/sidebar'%>
    <div class="heading-question d-flex justify-content-center align-item-center">
      <h1 > Question Bank</h1> 
    </div>
  </div>
  <div class="container shadow question-bank">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10 col-lg-10">
            <div class="border">
                <div class="question bg-white p-3 border-bottom sub-name">
                    <div class="d-flex flex-row justify-content-center align-items-center subject-name">
                    <h4>Today's <%= @question.try(:subject) || 'English' %> Quiz</h4>
                    </div>
                </div>
                <div class="question bg-white p-3 ">
                        <div class="d-flex flex-row align-items-center question-title">
                            <h2 class="text">Q. </h2>
                            <h4 class="mt-1 ml-2 subject-question"> <h4 class="mt-1 ml-2 subject-question"> <%= @question.try(:question) || 'What\'s your name?' %> </h4>
                        </div>
                        <div class="ans ">
                            <label class="radio row "> 
                            <input type="radio" name="answer" value="1">
                            <span>1. Prajjwal</span>
                            </label>    
                        </div>
                        <div class="ans ">
                            <label class="radio row">
                            <input type="radio"name="answer" value="1" > 
                            <span>2. Prakhar</span>
                            </label>    
                        </div>
                        <div class="ans ">
                            <label class="radio row"> 
                            <input type="radio"name="answer" value="1" >
                            <span>3. Harshit</span>
                            </label>    
                        </div>
                        <div class="ans ">
                            <label class="radio row">
                            <input type="radio" name="answer" value="1">
                            <span>4. None of the above </span>
                            </label>    
                        </div>
                        </div>
                        <div class="d-flex flex-row justify-content-center p-3 bg-white">
                         <button id="submitBtn" class="btn submit-bttn" type="button" style =" background-image: linear-gradient(180deg, #071a35, #071a35);color: white;font-size:1.7em; border-radius: 8px;">Submit</button>
                        </div>
                        </div>
        </div>
    </div>
  </div>
</body>

<style>
body {
    background: linear-gradient(to right, #fff5d7, #1d304e);
    height: 100%;
  }
  .heading-question h1{
    margin-top: 1.7%;
    font-weight:850;
    color:white;
    font-size:4em;   
     border-radius: 0.5rem;
}
  .question-bank {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    border-radius: 25px;
    margin-top:1.6%;
    margin-bottom:4%;
    padding-bottom: 4%;
    padding-top: 4%;
    background: white;
  }

  .row {
    max-width: 90%; 
    width: 100%; 
    margin: 0 auto; 
  }

label.radio {
  cursor: pointer;
}

label.radio input {
  position: absolute;
  visibility: hidden;
  pointer-events: none;
}

label.radio span {
  padding: 10px 10px;
  border: 2.5px solid #071a35;
  display: inline-block;
  color: #071a35;
  border-radius: 30px;
  margin-top: 2%;
  text-transform: uppercase;
  font-size: 1em;
  font-weight:500;
}

label.radio input:checked + span {
  border-color: #071a35;
  background-color: #071a35;
  color: #fff;
}

.subject-name h4{
  font-weight: 1000;
  font-size: 1.9em;
}
.subject-question{
    margin-left: 0.7em;
}
.subject-name{
    text-align:center;
}
label.radio:hover span {
    border-color: #fff5d7;
    background: linear-gradient(to right,#071a35, #fff5d7 );
    color: #fff;
  }

</style>

<script>
    document.getElementById('submitBtn').addEventListener('click', function() {
       var selectedAnswer = document.querySelector('label.radio input:checked');

        if (selectedAnswer) {
            var selectedAnswerText = selectedAnswer.nextElementSibling.innerHTML;
            var questionText = selectedAnswerText.split('.').slice(1).join('.').trim();
            alert('Selected Answer: ' + questionText);
        } 
        else {
            alert('Please select an answer before submitting.');
        }
    });
    
</script>