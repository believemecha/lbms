<div class="container my-4">
<h1 class="text-center my-4">Welcome back! <%= @organization.name %></h1>

<div class="row justify-content-center">
  <!-- Organization Image -->
  <div class="col-md-12">
    <% if @organization.icon_image.present? %>
      <img src="<%= @organization.icon_image %>" alt="<%= @organization.name %> Image" class="img-fluid">
    <% else %>
      <p>No image available</p>
    <% end %>
  </div>

  <!-- Organization Details -->
  <div class="col-md-8">
    <p><%= @organization.description %></p>

    <!-- Action Buttons -->
    <div class="row w-100">
      <%= link_to 'View Students', "/offer_organizations/#{@organization.code}/students_list", class: 'btn btn-info col-md-5 mx-2' %>
      <%= link_to 'Add New Student', "/offer_organizations/#{@organization.code}/new_student", class: 'btn btn-primary col-md-5' %>
      <%= link_to 'Start Scanning ðŸ“¸', "/offer_organizations/#{@organization.code}/scan", class: 'btn btn-success col-md-12 mt-2 mx-2',data-trubolinks="false" %>
    </div>
  </div>
</div>

</div>