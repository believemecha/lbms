<div class="px-4 md:px-20 relative">
  <h2 class="text-2xl md:text-3xl text-blue-500 font-bold mb-4 md:mb-8 text-center">Blogs</h2>
  <a href="/creators/blogs/new_blog" class="text-white bg-blue-500 px-3 md:px-4 py-2 rounded-md mb-6" target="_blank">New Blog</a>

  <% @blogs.each_with_index do |blog,index| %>
    <div class="mb-6 md:mb-10 bg-white rounded-lg shadow-md overflow-hidden flex flex-col md:flex-row <%=index == 0 ? "mt-6": ""%>">
      <div class="w-full md:w-1/3 bg-gray-200 flex-none h-48 md:h-auto"> <!-- Adjusted height for smaller screens -->
        <img src="https://source.unsplash.com/200x200/?<%= blog.title %>" alt="<%= blog.title %>" class="object-cover w-full" style="height:250px;" />
      </div>
      <div class="w-full md:w-2/3 p-4 md:p-6">
        <h3 class="text-lg md:text-xl font-bold text-blue-500 mb-2"><%= blog.title %></h3>
        <p class="text-sm md:text-base text-gray-700 mb-2 md:mb-4">By <%= blog.user.name %></p>
        <a href="/creators/blogs/<%= blog.slug %>" class="text-white bg-blue-500 px-3 py-1 md:px-4 md:py-2 rounded-md inline-block">Read More</a>
      </div>
    </div>
  <% end %>
<%if @blogs.total_pages > 1%>
 <div class="text-center w-full mt-8 mb-6">
  <nav class="inline-flex">
    <% 1.upto(@blogs.total_pages) do |page| %>
      <a href="?page=<%= page %>" class="<%= page == @blogs.current_page ? 'bg-blue-500 text-white' : 'text-gray-600 hover:text-blue-500' %> px-3 py-1 mx-1 rounded-md">
        <%= page %>
      </a>
    <% end %>
  </nav>
</div>
<% end%>

</div>
