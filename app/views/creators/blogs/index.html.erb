<div class="px-20 relative">
  <h2 class="text-3xl text-blue-500 font-bold mb-8 text-center">Blogs</h2>
  <a href="/creators/blogs/new_blog" class="text-white bg-blue-500 px-4 py-2 rounded-md absolute top-0 right-0" target="_blank">New Blog</a>

  <% @blogs.each do |blog| %>
    <div class="mb-10 bg-white rounded-lg shadow-md overflow-hidden flex">
      <div class="w-1/3 bg-gray-200 flex-none">
        <img src="https://source.unsplash.com/200x200/?<%= blog.title %>" alt="<%= blog.title %>" class="object-cover w-full h-full" />
      </div>
      <div class="w-2/3 p-6">
        <h3 class="text-xl font-bold text-blue-500 mb-2"><%= blog.title %></h3>
        <p class="text-gray-700 mb-4">By <%= blog.user.name %></p>
        <a href="/creators/blogs/<%= blog.slug %>" class="text-white bg-blue-500 px-4 py-2 rounded-md inline-block">Read More</a>
      </div>
    </div>
  <% end %>

  <div class="text-center w-full">
    <%= paginate @blogs %>
  </div>
</div>
