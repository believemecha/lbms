<div style="margin-top: 40px; padding: 20px; position: relative;">

  <h2 style="color: #007BFF;">All Blogs</h2>
  
  <% @blogs.each do |blog| %>
    <div style="margin-bottom: 20px; border: 1px solid #ddd; border-radius: 5px; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
      <div style="padding: 15px;">
        <h3 style="color: #007BFF; margin-bottom: 10px;"><%= blog.title %></h3>
        <div style="color: #333; max-height: 200px; overflow: hidden;"><%= blog.content.html_safe %></div>
        <a href="<%= "/creators/blogs/#{blog.slug}" %>" style="text-decoration: none; color: #fff; background-color: #007BFF; padding: 8px 12px; display: inline-block; margin-top: 10px;">Read More</a>
      </div>
    </div>
  <% end %>

  <a href="<%= "/creators/blogs/new_blog" %>" style="text-decoration: none; color: #fff; background-color: #007BFF; padding: 8px 12px; display: inline-block; position: absolute; top: 20px; right: 20px;" target="_bkank">New Blog</a>

</div>
