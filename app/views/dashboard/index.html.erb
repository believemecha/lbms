<div class="container">
  <h1 class="mt-5">Call Log Statistics</h1>

  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Total Calls</h5>
          <p class="card-text"><%= @total_calls %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Total Call Duration</h5>
          <p class="card-text"><%= @total_duration %> seconds</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Average Call Duration</h5>
          <p class="card-text"><%= @average_duration %> seconds</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Longest Call</h5>
          <p class="card-text">
             <%= @longest_call.try(:duration) %> seconds , <%=@longest_call.try(:call_type)%> 
             <br>
             with <%=@longest_call.try(:name)%> on <%=@longest_call.try(:call_start_time)%>
           </p>
        </div>
      </div>
    </div>
  </div>

    <div class="container mt-4" style="border: 1px solid #ccc; max-height: 400px; overflow-y: scroll; ">
    <p>Sumary</p>
    <div class="card p-2 my-1">
        <div class="row">
          <div class="col">
            <h5>
              Person 
            </h5>
          </div>
          <div class="col">
          <h5 style="color: black">Total Calls</h5>
          </div>
        </div>
    </div>
    <% @summary.each_with_index do |item,index| %>
      <div class="card p-2 my-1">
        <div class="row">
          <div class="col">
            <h5>
              <%= item[0] %> 
            </h5>
          </div>
          <div class="col">
          <h5 style="color: blue"><%= item[1] %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
 </div>
