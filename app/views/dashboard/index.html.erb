<div class="container">
  <h1 class="mt-5">Call Log Statistics</h1>

  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Total Calls</h5>
          <p class="card-text"><%= @total_calls %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Total Call Duration</h5>
          <p class="card-text"><%= @total_duration %> seconds</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Average Call Duration</h5>
          <p class="card-text"><%= @average_duration %> seconds</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card mt-2">
        <div class="card-body">
          <h5 class="card-title">Longest Call</h5>
          <p class="card-text"><%= @longest_call.try(:duration) %> seconds</p>
        </div>
      </div>
    </div>
  </div>
</div>
